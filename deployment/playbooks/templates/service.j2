[Unit]
Description={{ project_name }} service
After=network.target
StartLimitIntervalSec=0

[Service]
Restart=always
RestartSec=3
User=www-data
Group=www-data
WorkingDirectory={{ app_modules }}
ExecStart={{ venv_path }}/bin/uvicorn --loop uvloop {{ app_gateway }}:application
LimitNOFILE=1000000

[Install]
WantedBy=multi-user.target
